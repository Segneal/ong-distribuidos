					"name": "List Associations",
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "text/xml; charset=utf-8"
							},
							{
								"key": "SOAPAction",
								"value": "list_associations"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "<?xml version=\"1.0\" encoding=\"utf-8\"?>\n<soapenv:Envelope xmlns:soapenv=\"http://schemas.xmlsoap.org/soap/envelope/\" xmlns:auth=\"auth.headers\" xmlns:tns=\"soap.backend\">\n  <soapenv:Header>\n    <auth:Auth>\n      <auth:Grupo>GrupoA-TM</auth:Grupo>\n      <auth:Clave>clave-tm-a</auth:Clave>\n    </auth:Auth>\n  </soapenv:Header>\n  <soapenv:Body>\n    <tns:list_associations>\n      <tns:org_ids>\n        <tns:string>6</tns:string>\n        <tns:string>5</tns:string>\n        <tns:string>8</tns:string>\n        <tns:string>10</tns:string>\n      </tns:org_ids>\n    </tns:list_associations>\n  </soapenv:Body>\n</soapenv:Envelope>",
							"options": {
								"raw": {
									"language": "xml"
								}
							}
						},
