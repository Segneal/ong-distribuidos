						"body": {
							"mode": "raw",
							"raw": "{\n  \"query\": \"query NetworkConsultation($organizationIds: [Int!]!) { networkConsultation(organizationIds: $organizationIds) { organizations { organizationId organizationName address phone email } presidents { presidentId presidentName presidentAddress presidentPhone organizationId } totalOrganizations totalPresidents errors } }\",\n  \"variables\": {\n    \"organizationIds\": {{TestOrganizationIds}}\n  }\n}",
							"options": {
