# Puerto del servidor
PORT=3000

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=24h

# Base de datos
DATABASE_URL=postgresql://ong_user:ong_pass@localhost:5432/ong_management

# Microservicios gRPC
USER_SERVICE_URL=localhost:50051
INVENTORY_SERVICE_URL=localhost:50052
EVENTS_SERVICE_URL=localhost:50053

# Reports Service
REPORTS_SERVICE_URL=http://localhost:8002

# Kafka
KAFKA_BROKERS=localhost:9092
ORGANIZATION_ID=empuje-comunitario

# Email (para testing)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=noreply@empujecomunitario.org
