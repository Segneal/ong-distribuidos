				{
					"name": "Donation Reports",
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							},
							{
								"key": "Authorization",
								"value": "Bearer {{AuthToken}}"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"query\": \"query GetDonationReport($categoria: String, $fechaDesde: String, $fechaHasta: String, $eliminado: Boolean) { donationReport(categoria: $categoria, fechaDesde: $fechaDesde, fechaHasta: $fechaHasta, eliminado: $eliminado) { categoria totalCantidad eliminado registros { id categoria descripcion cantidad fechaAlta } } }\",\n  \"variables\": {\n    \"categoria\": \"ALIMENTOS\",\n    \"fechaDesde\": \"2024-01-01T00:00:00\",\n    \"fechaHasta\": \"2024-12-31T23:59:59\",\n    \"eliminado\": false\n  }\n}",
							"options": {
								"raw": {
									"language": "json"
								}
							}
						},
						"url": {
							"raw": "{{GraphQLBaseUrl}}/api/graphql",
							"host": [
								"{{GraphQLBaseUrl}}"
							],
							"path": [
								"api",
								"graphql"
							]
						},
						"description": "Query GraphQL para obtener reportes de donaciones con filtros"
					}
				},
